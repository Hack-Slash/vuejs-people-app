<h1>People#index</h1>
<p>Find me in app/views/people/index.html.erb</p>

<div id="app">
  The number of people is: {{ countOfPeople() }}
  <div v-for="person in people">
    <h2 v-on:click="toggleBioVisible(person)">{{ person.name }}</h2>
    <h3 v-bind:class="{strike: !person.bioVisible}">{{ person.bio }}</h3>
    <h3>{{ person.bioVisible }}</h3>
    <button v-on:click="removePerson(person)">Remove a person</button>
  </div>

  <p v-for="error in errors">{{ error }}</p>
  <input v-model="newPersonName">
  <input v-model="newPersonBio">
  <button v-on:click="addPerson()">Add a new person</button>

</div>

